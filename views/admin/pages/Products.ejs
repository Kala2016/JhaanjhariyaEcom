      <!--  Header End -->
      <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h4 class="content-title"></h4>
                    <!-- <div>
                        <button class="btn btn-light rounded font-sm mr-5 text-body hover-up"></button>
                        <button class="btn btn-md rounded font-sm hover-up"></button>
                    </div> -->
                </div>
            </div>
            
            <form action="" method="post" >
              <div class="col-lg-12">
                <div class="card mb-4">
                  
                    <div class="card-body">
                        <div class="mb-4">
                          <div>
                            <label for="product_title" class="form-label" style="font-size:25px;">Product List </label>
                                                       
                            
                            

                            <div class="d-flex justify-content-between">
                              <div>
                                <form class="searchform" action="/admin/Products" method="post">
                                  <div class="input-group">
                                      <input list="search_terms" type="text" class="form-control" name="searchProduct">
                                      <button type="submit" class="btn btn-primary">Search</button>
                                  </div>
                              </form>
                              
                              </div>
                              <a href="/admin/addProducts" class="btn btn-primary">Create </a> 
                            </div>
                            
                            <div>                             
                            
                             
                          </div>
                            <br>
                            <br>
                            <table style="width: 100%;" id="example" class="table table-striped table-bordered table-sm" cellspacing="0"
                            width="100%">
                            <thead>
                                <tr>
                                    <th class="th-sm">Image</th>
                                    <th class="th-sm">Product Name</th>
                                    <th class="th-sm">Collections</th>
                                    <th class="th-sm">Category</th>
                                    <th class="th-sm">Color</th>
                                    <th class="th-sm">Stock</th>
                                    <th class="th-sm">Price</th>
                                    <th class="th-sm">Sale Price</th>
                                    <th>List/Unlist</th>
                                    <th class="th-sm">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% productList.forEach(productData => { %>
                                <tr>
                                  <% let v = productData.variants, totalStock = 0; %>
                                  <td><img src="<%= productData?.images[0]?.thumbnailUrl %>" style="max-width: 75px; max-height: 75px;" alt="Product Image"></td>
                                  <td><%= productData.productName %></td>
                                  <td><%= productData.collectionName?.collectionName %></td>
                                  <td><%= productData.categoryName?.categoryName %></td>
                                  <td>
                                    <% if(v.length) { %>
                                      <% for(let i=0; i < v.length; i++) { %>
                                        <span class="text-success">V<%= i %> : </span>
                                        <div class="col border ms-2" style="max-width: 20px; height: 20px; background-color:<%= productData.variants[i].color %>"></div>
                                      <% } %>
                                    <% } %>
                                  </td>
                                  <td>
                                    <% if(v.length) { %>
                                      <% for(let i=0; i < v.length; i++) { %>
                                        <span class="text-success">V<%= i+1 %> : </span><%= productData.variants[i].stock%>
                                      <% } %>
                                    <% } %>
                                  </td>
                                  <td>
                                    <% if(v.length) { %>
                                      <% for(let i=0; i < v.length; i++) { %>
                                        <span class="text-success">V<%= i+1 %> : </span>&#8377;<%= productData.variants[i].price %>
                                      <% } %>
                                    <% } %>
                                  </td>
                                  <td><%= productData.salePrice %></td>
                                  <td>
                                    <% if (productData.isListed) { %>
                                      <form action="/admin/UnList/<%= productData._id %>" method="post">
                                        <button type="submit" class="btn btn-warning m-1 unblock-button">Unlist</button>
                                      </form>
                                    <% } else { %>
                                      <form action="/admin/list/<%= productData._id %>" method="post">
                                        <button type="submit" class="btn btn-success m-1 block-button">List</button>
                                      </form>
                                    <% } %>
                                  </td>
                                  <td>
                                    <a href="/admin/editProduct/<%= productData._id %>" class="btn btn-outline-info m-1">Edit</a>
                                  </td>
                                </tr>
                              <% }); %>
                            </tbody>
                            
                            
                            
                            
                        </table>
                    </div>
            
                </section>

                <script src="../adminassets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../adminassets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
