    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="login-form">
                        <h2>Login</h2>
                        <form action="/postLogin" method="post" id="loginForm" onsubmit="return validateLoginForm()">
                            <div class="group-input">
                                <label for="username">Email address *</label>
                                <input type="email" id="email" name="email" value="johim13189@azduan.com" required>
                            </div>
                            <div class="group-input">
                                <label for="pass">Password *</label>
                                <input type="password" id="pass" name="password" value="123456789" required>
                            </div>
                            <div class="group-input gi-check">
                                <div class="gi-more">
                                    <label for="save-pass">
                                        Save Password
                                        <input type="checkbox" id="save-pass">
                                        <span class="checkmark"></span>
                                    </label>
                                    <a href="/forgetPassword" class="forget-pass">Forget your Password</a>
                                </div>
                            </div>
                            <button type="submit" class="site-btn login-btn">Sign In</button>
                        </form>
                        <div class="switch-login">
                            <a href="/user-signup" class="or-login">Or Create An Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register Form Section End -->

    <!-- SweetAlert library -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        function validateLoginForm() {
            // Reset previous error messages
            resetErrors();
    
            // Get form inputs
            var email = document.getElementById('email').value;
            var password = document.getElementById('pass').value;
            var savePass = document.getElementById('save-pass').checked;
    
            // Validate email
            if (!isValidEmail(email)) {
                showError('Invalid email address', 'username');
                return false;
            }
    
            // Validate password
            if (password.length < 4) {
                showError('Password must be at least 4 characters', 'pass');
                return false;
            }
    
            // Simulate a successful login
            simulateLogin();
    
            return true;
        }
    
        function isValidEmail(email) {
            // Simple email validation
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
    
        function showError(message, inputId) {
            // Display error message and highlight the input in red
            alert(message);
            document.getElementById(inputId).style.border = '2px solid red';
        }
    
        function resetErrors() {
            // Reset error styles
            document.getElementById('username').style.border = '';
            document.getElementById('pass').style.border = '';
        }
    
        function simulateLogin() {
            // Simulate a successful login
            Swal.fire({
                icon: 'success',
                title: 'Login Successful!',
                text: 'You have logged in.',
                confirmButtonText: 'OK'
            });
        }
    </script>
    
    

    
        

    
    
    

    
