
<%- include('../partials/header.ejs')%>
<div class="add-address pb-10">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-12">
                <form action="/addAddress" method="POST" class="address-form" onsubmit="return validateForm()">
                    <h3>Add Address</h3>
                    <% if (from) { %>
                        <input type="hidden" name="from" value="Checkout">
                        <% } %>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="first-name">Name <span class="required">*</span></label>
                                        <input type="text" name="name" class="form-control" placeholder="Name" />
                                        <div class="error-message"></div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label for="addressType">Address Type:</label>
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="home" name="addressType"
                                                value="Home" checked>
                                            <label class="form-check-label" for="home">Home</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input type="radio" class="form-check-input" id="work" name="addressType"
                                                value="Work">
                                            <label class="form-check-label" for="work">Work</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="address">Address <span class="required">*</span></label>
                                        <input type="text" name="address" class="form-control"
                                            placeholder="Street Address" />
                                        <div class="error-message"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group mt-2">
                                        <label for="city">Town / City <span class="required">*</span></label>
                                        <input type="text" name="town" class="form-control" placeholder="Town / City" />
                                        <span class="error-message" id="city-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group mt-2">
                                        <label for="state">State<span class="required">*</span></label>
                                        <input type="text" name="state" class="form-control" placeholder="State" />
                                        <div class="error-message"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group mt-2">
                                        <label for="postcode">Postcode / Zip <span class="required">*</span></label>
                                        <input type="text" name="postCode" class="form-control" />
                                        <div class="error-message"></div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mt-2">
                                        <label for="phone">Phone <span class="required">*</span></label>
                                        <input type="text" name="phone" class="form-control" placeholder="Phone" />
                                        <div class="error-message"></div>
                                    </div>
                                </div>
                            </div>
                            <a href="/savedAddress"><button type="submit" class="btn btn-primary my-3">Save
                                    Address</button>
                            </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Add Address Form Styles */
.address-form {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 5px;
}

.address-form h3 {
    margin-bottom: 20px;
    color: #333;
}

.address-form label {
    font-weight: bold;
}

.address-form input[type="text"],
.address-form input[type="email"],
.address-form input[type="tel"],
.address-form input[type="password"],
.address-form input[type="number"],
.address-form textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.address-form input[type="radio"] {
    margin-right: 5px;
}

.address-form .form-check-label {
    margin-right: 15px;
}

.address-form .form-group {
    margin-bottom: 20px;
}

.address-form .error-message {
    color: red;
    font-size: 12px;
}

.address-form .btn-primary {
    background-color: #007bff;
    border: none;
    color: #fff;
    padding: 10px 20px;
    cursor: pointer;
}

.address-form .btn-primary:hover {
    background-color: #0056b3;
}

</style>

<script src="/assets/js/users/addressValidation.js"></script>


<%- include('../partials/footer.ejs')%>